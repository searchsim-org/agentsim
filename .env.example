# AgentSim Configuration

# ============================================
# LLM Provider API Keys
# ============================================
# OpenAI (GPT models)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ORG_ID=  # Optional

# Anthropic (Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google (Gemini models)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_PROJECT_ID=  # Optional for Vertex AI

# Mistral
MISTRAL_API_KEY=your-mistral-key-here

# Cohere
COHERE_API_KEY=your-cohere-key-here

# Together AI
TOGETHER_API_KEY=your-together-key-here

# Custom LLM Endpoint (e.g., university hosted models)
CUSTOM_LLM_ENDPOINT=
CUSTOM_LLM_API_KEY=your-custom-api-key

# Ollama (local models)
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_ENABLED=true

# ============================================
# Default Teacher Models
# ============================================
# Comma-separated list of teacher models to use
# Format: provider:model_id or just model_id
TEACHER_MODELS=gpt-4o,claude-sonnet-3.5,gemini-pro
TEACHER_TEMPERATURE=0.7

# ============================================
# Default Consultant Models (optional)
# ============================================
CONSULTANT_MODELS=claude-sonnet-3.5,gemini-flash,mistral-large
CONSULTANT_TEMPERATURE=0.7

# ============================================
# Default Verifier Model (optional)
# ============================================
VERIFIER_MODEL=gpt-4o-mini
VERIFIER_TEMPERATURE=0.1

# ============================================
# Retrieval Configuration
# ============================================
# OpenSearch
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_INDEX=documents
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_USE_SSL=false

# Vector Search
VECTOR_SEARCH_ENABLED=true
VECTOR_SEARCH_ENDPOINT=  # Optional custom endpoint

# ChatNoir (optional)
CHATNOIR_ENABLED=false
CHATNOIR_API_KEY=your-chatnoir-key

# ============================================
# Simulation Defaults
# ============================================
MAX_ITERATIONS=5
SIMILARITY_THRESHOLD=0.6
SIMILARITY_METRIC=embedding_cosine

# Output
OUTPUT_DIR=./simulation_output

# ============================================
# Advanced LLM Settings
# ============================================
# Default timeouts and retry settings
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_MAX_TOKENS=4096
